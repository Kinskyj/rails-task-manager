<div class="wrapper">

  <div class="container">
    <div class="row">
      <div class="col-sm-offset-3 col-sm-6">
        <h1 class="head">Your To Dos:</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-offset-3 col-sm-6">
        <% @tasks.each do |task| %>
          <div class="result-align">
            <p class="name-size"><%= task.name %></p>
            <%= link_to "Show", task_path(task.id), :class => "btn"%>
            <%= link_to "Edit", edit_task_path(task.id), :class => "btn" %>
            <%= link_to "Delete", task_path(task.id), :class => "btn",
                method: :delete,
                data: { confirm: "Are you sure?" }%>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-offset-3 col-sm-6">
        <div class="btn-align">
        <%= link_to "Create a Task", new_task_path, :class => "btn big" %>
        </div>
      </div>
    </div>
  </div>
</div>
